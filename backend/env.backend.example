# Backend Environment Variables
# Copy this to .env and fill in your values

# ===================
# DATABASE CONFIGURATION
# ===================
# Option 1: Use full DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual components (for local development)
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ai_chat_app

# ===================
# API KEYS
# ===================
GOOGLE_API_KEY=your_google_api_key_here
SECRET_KEY=your_jwt_secret_key_here

# ===================
# CORS CONFIGURATION
# ===================
# For production (your deployed frontend URLs)
ALLOWED_ORIGINS=https://ai-chat-app-jqav.vercel.app

# For multiple frontends (Vercel and GitHub Pages)
# ALLOWED_ORIGINS=https://ai-chat-app-jqav.vercel.app,https://balaji-senthil.github.io

# For development (include both)
# ALLOWED_ORIGINS=https://ai-chat-app-jqav.vercel.app,http://localhost:5173

# ===================
# RAILWAY SPECIFIC (automatically set by Railway)
# ===================
# PORT=8000  # Railway sets this automatically
# RAILWAY_ENVIRONMENT=production

# ===================
# DATABASE EXAMPLES
# ===================
# Supabase: postgresql://postgres:password@db.supabase.co:5432/postgres
# Neon: postgresql://user:password@hostname.neon.tech/database
# Railway PG: postgresql://postgres:password@containers-us-west-xx.railway.app:port/railway
# Local: postgresql://postgres:password@localhost:5432/ai_chat_app

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# AI/LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Rate limiting
RATE_LIMIT_ENABLED=true 